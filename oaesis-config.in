#!/bin/sh

ovdisis_libs="@OVDISIS_LIBS@"
ovdisis_cflags="@OVDISIS_CFLAGS@"

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: oaesis-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo $ovdisis_cflags -I@OSISINCLUDE@
      ;;
    --libs)
      my_ovdisis_libs=
      libdirs=-L@libdir@
      for i in $ovdisis_libs ; do
        if test $i != -L@libdir@ ; then
          if test -z "$my_ovdisis_libs" ; then
            my_ovdisis_libs="$i"
          else
            my_ovdisis_libs="$my_ovdisis_libs $i"
          fi
        fi
      done
      echo $libdirs -loaesis $my_ovdisis_libs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

